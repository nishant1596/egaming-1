<script src="/ckeditor/ckeditor.js"></script>
<!-- Bootstrap Form -->
<div class="container" style="margin-top:110px">
  <h3 class="text-center">Welcome Pankaj</h3>
  <h2>Add Coaching</h2>
  <!-- <p>The form below contains two input elements; one of type text and one of type password:</p> -->

  <form action="/cms/coaching/add/add-coaching" method="post">
    <div class="row">
      <div class="col-12">
        <div class="form-group">
          <label for="coaching_title">Coaching Title</label>
          <input type="text" class="form-control" id="coaching_title" name="coaching_title" required>
        </div>
      </div>
      <div class="col-12">
        <div class="form-group">
          <label for="coaching_detail">coaching Details (Please do not use picture option here)</label>
          <textarea class="form-control" id="editor1" name="coaching_detail" required></textarea>
        </div>
      </div>
      <div class="col-12 col-md-4 col-lg-4">
        <div class="form-group">
          <label for="coaching_image">coaching Image</label>
          <input type="file" name="coaching_image" id="coaching_image" class="form-control form-control-file border" required>
        </div>
      </div>

    <div class="form-group">
      <input type="checkbox" class="" id="coaching_isPremium" name="coaching_isPremium" checked>
      <label class="custom-control-label" for="coaching_isPremium">Feature this Coaching</label>
    </div>
    <div class="col-12">
      <div class="form-group">
        <label for="coaching_address">coaching Address</label>
        <textarea class="form-control" id="coaching_address" name="coaching_address" required></textarea>
      </div>
    </div>
  </div>
  <div class="text-center mb-3">
    <button type="submit" class="btn btn-success " >Submit</button>
  </div>
  </form>



</div>
<script>
  CKEDITOR.replace( 'editor1' );
  $('.your-checkbox').prop('indeterminate', true)
</script>
